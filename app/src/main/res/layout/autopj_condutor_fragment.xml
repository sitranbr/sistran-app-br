<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_2"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <com.rey.material.widget.CheckBox
            android:id="@+id/cb_se_infrator_abordado"
            style="@style/Material.Drawable.CheckBox"
            app:cbd_strokeColor="@color/yellow_light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_margin_top"
            android:checked="false"
            android:gravity="center"
            android:layout_marginLeft="@dimen/widght_padding_2"
            android:layout_marginBottom="@dimen/widght_padding_2"
            android:text="@string/sem_abordagem_pj"
            android:textColor="@color/primary" />

        <LinearLayout
            android:id="@+id/ll_hide_all"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical"
            android:padding="@dimen/widght_padding" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/widght_margin_top_2"
                android:orientation="horizontal" >

                <RadioGroup
                    android:id="@+id/rg_type_pj"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|left"
                    android:orientation="horizontal" >

                    <RadioButton
                        android:id="@+id/rb_pj_juridica"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/tipo_juridica"
                        android:checked="true"
                        android:buttonTint="@color/yellow_light"
                        android:textColor="@color/primary" />

                    <RadioButton
                        android:id="@+id/rb_pj_fisica"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/tipo_fisica"
                        android:buttonTint="@color/yellow_light"
                        android:textColor="@color/primary" />

                </RadioGroup>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:focusable="true"
                android:focusableInTouchMode="true" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:orientation="vertical"
                    android:padding="@dimen/widght_padding" >

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColorHint="@color/primary"
                        android:layout_marginBottom="@dimen/padding_top_edit" >

                        <EditText
                            android:id="@+id/et_pj_nome_infrator"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="left|center_vertical"
                            android:inputType="textCapCharacters"
                            android:hint="@string/nome_infrator"
                            android:backgroundTint="@color/primary"
                            android:textColor="@color/gray_5"
                            android:paddingBottom="@dimen/widght_padding_3" />

                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/til_pj_cnpj"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColorHint="@color/primary"
                        android:layout_marginBottom="@dimen/padding_top_edit" >

                        <EditText
                            android:id="@+id/et_pj_cnpj"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="left|center_vertical"
                            android:inputType="textCapCharacters"
                            android:hint="@string/rb_cnpj_embarcador"
                            android:backgroundTint="@color/primary"
                            android:textColor="@color/gray_5"
                            android:paddingBottom="@dimen/widght_padding_3" />

                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/til_pj_cpf"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColorHint="@color/primary"
                        android:visibility="gone"
                        android:layout_marginBottom="@dimen/padding_top_edit" >

                        <EditText
                            android:id="@+id/et_pj_cpf"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="left|center_vertical"
                            android:inputType="textCapCharacters"
                            android:hint="@string/rb_cpf_embarcador"
                            android:backgroundTint="@color/primary"
                            android:textColor="@color/gray_5"
                            android:paddingBottom="@dimen/widght_padding_3" />

                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColorHint="@color/primary"
                        android:layout_marginBottom="@dimen/padding_top_edit" >

                        <EditText
                            android:id="@+id/et_pj_endereco"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="left|center_vertical"
                            android:inputType="textCapCharacters"
                            android:hint="@string/endereco"
                            android:backgroundTint="@color/primary"
                            android:textColor="@color/gray_5"
                            android:paddingBottom="@dimen/widght_padding_3" />

                    </android.support.design.widget.TextInputLayout>


                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false" >

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="vertical"
                android:paddingStart="@dimen/widght_padding"
                android:paddingRight="@dimen/indicator_width" >

                <com.rey.material.widget.CheckBox
                    android:id="@+id/cb_pj_confirmar"
                    style="@style/Material.Drawable.CheckBox"
                    app:cbd_strokeColor="@color/yellow_light"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/layout_margin_top"
                    android:layout_marginBottom="@dimen/padding_top_edit"
                    android:checked="false"
                    android:gravity="center"
                    android:padding="0dip"
                    android:text="@string/cb_confirmar"
                    android:textColor="@color/primary" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight=".3"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="vertical"
                android:paddingStart="@dimen/indicator_width" >

                <TextView
                    android:id="@+id/autopj_fab"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_gravity="end|bottom"
                    android:visibility="gone"
                    android:background="@drawable/ic_salvar_round_72"
                    android:layout_marginBottom="@dimen/widght_padding_2"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>