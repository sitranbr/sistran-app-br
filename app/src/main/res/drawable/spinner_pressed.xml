<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <layer-list>

            <item>
                <shape>
                    <solid android:color="@color/gray_2" />
                </shape>
            </item>
            <item>
                <bitmap android:filter="true" android:gravity="right|center" android:src="@drawable/ic_sp_pressed" />
            </item>
            <item
                android:bottom="1dp"
                android:left="-3dp"
                android:right="-3dp"
                android:top="-3dp">
                <shape android:shape="rectangle">
                    <stroke
                        android:width="1dp"
                        android:color="@color/primary" />
                    <!--android:color="#535353" />-->
                </shape>
            </item>
        </layer-list>
    </item>

</selector>